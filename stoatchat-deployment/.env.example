# Stoatchat Environment Configuration
# Copy this file to .env and update with your values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# MongoDB Configuration
MONGO_ROOT_USERNAME=stoatchat
MONGO_ROOT_PASSWORD=change_this_secure_password
MONGO_DATABASE=stoatchat

# Redis Configuration
REDIS_PASSWORD=change_this_redis_password

# RabbitMQ Configuration
RABBITMQ_USER=stoatchat
RABBITMQ_PASSWORD=change_this_rabbitmq_password

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Secret for authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-immediately

# VAPID keys for push notifications
VAPID_PRIVATE_KEY=
VAPID_PUBLIC_KEY=

# Admin API key for admin panel
ADMIN_API_KEY=admin-secret-key-change-this

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# S3 Configuration for file storage (optional)
AUTUMN_S3_REGION=us-east-1
AUTUMN_S3_ENDPOINT=
AUTUMN_S3_BUCKET=stoatchat-uploads
AUTUMN_S3_ACCESS_KEY=
AUTUMN_S3_SECRET_KEY=

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable user registration
ENABLE_REGISTRATION=true

# Enable invite-only registration
ENABLE_INVITES=false

# =============================================================================
# MONITORING
# =============================================================================

# Grafana admin password
GRAFANA_PASSWORD=admin

# =============================================================================
# DOMAIN CONFIGURATION
# =============================================================================

# Your domain name (update this to your actual domain)
DOMAIN_NAME=stoat.chat

# API subdomain
API_SUBDOMAIN=api

# WebSocket subdomain
WS_SUBDOMAIN=ws

# Admin panel subdomain
ADMIN_SUBDOMAIN=admin

# Landing page (main domain)
LANDING_SUBDOMAIN=

# =============================================================================
# SSL/TLS CONFIGURATION
# =============================================================================

# Enable SSL (set to true for production)
ENABLE_SSL=false

# Email for Let's Encrypt
LETSENCRYPT_EMAIL=admin@yourdomain.com

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development mode (set to false for production)
DEVELOPMENT_MODE=true

# Debug mode
DEBUG=false

# Log level (debug, info, warn, error)
LOG_LEVEL=info